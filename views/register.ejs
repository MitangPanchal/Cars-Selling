<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/register.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
</head>

<body>
    <div id="outer">
        <div id="inner">
            <div class="left">
                <p>Sign up</p>
                <form action="/register" method="post" class="registerForm">

                    <div class="form-field">
                        <div class="name">
                            <i class="bi bi-person-fill"></i>
                            <input type="text" placeholder="Enter Your Name" name="username" required>
                        </div>
                        <div class="name">
                            <i class="bi bi-envelope"></i>
                            <input type="email" placeholder="Enter Your Email" name="email" required>
                        </div>
                        <!-- <span class="passError">Password Must Be Greater Then 5 Length</span> -->
                        <div class="name">
                            <i class="bi bi-lock-fill"></i>
                            <input type="password" placeholder="Enter Your Password" name="password" id="password" required>
                        </div>
                        <div class="name">
                            <i class="bi bi-phone-fill"></i>
                            <input type="number" placeholder="Enter Your Phone No." name="phone" required>
                        </div>
                        <div class="name">
                            <i class="bi bi-address-fill"></i>
                            <input type="text" placeholder="Enter Your Address" name="address" required>
                        </div>
                    
                        <input type="submit" value="Register" id="register">
                    </div>
                    <br><br>
                    <a href="/login">Login</a>
                </form>
            </div>
            <div class="right">
                <img src="/images/ford-mustang-red-car-3.png" alt="">
            </div>
        </div>
    </div>

</body>

<script>

        let registerForm=document.querySelector(".registerForm")
        let register=document.querySelector("#register")
        let passInput=document.querySelector("#password")
        let passError=document.querySelector(".passError")
        register.addEventListener('click',function(){
            let isValid = true;
            if(passInput.value.length<5){
                isValid = false;
                passError.style.display=="block"    
            }
        })
        if (!isValid) {
            event.preventDefault();
        }
</script>

</html>